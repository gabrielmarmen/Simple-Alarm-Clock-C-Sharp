<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:SimpleAlarmClock"
                    >


    <ContextMenu x:Key="NotifyIconContextMenu"             
                 Background="White">
        
        <MenuItem Header="Open" />
        <MenuItem Header="Quit" />

    </ContextMenu>

    <tb:TaskbarIcon
            Visibility="Hidden"
            x:Name="TaskbarIcon"
            IconSource="/Images/alarm-clock.ico"
            ToolTipText="Double-click for window, right-click for menu"
            x:Key="NotifyIcon"
            ContextMenu="{StaticResource NotifyIconContextMenu}"
            DoubleClickCommand="{Binding OpenBackWindow}"
            >
    </tb:TaskbarIcon>

</ResourceDictionary>